# ---- Network ----
LISTEN_HOST=127.0.0.1
LISTEN_PORT=8088
PUBLIC_BASE_URL=https://moveware-ai-runner.holdingsite.com.au

# ---- Jira Cloud ----
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@moveware.com
JIRA_API_TOKEN=CHANGE_ME
JIRA_WEBHOOK_SECRET=CHANGE_ME

# Jira accountIds (Cloud)
JIRA_ASSIGNEE_AI_ACCOUNT_ID=CHANGE_ME
JIRA_ASSIGNEE_LEIGH_ACCOUNT_ID=CHANGE_ME

# Jira workflow transitions (names)
JIRA_TRANSITION_IN_TESTING=In Testing
JIRA_TRANSITION_DONE=Done

# ---- GitHub ----
GITHUB_REPO_URL=https://github.com/leigh-moveware/online-docs.git
GITHUB_BASE_BRANCH=main
GITHUB_WORKDIR=/srv/ai/workdir/online-docs

# Optional: if using SSH instead of HTTPS
# GITHUB_REPO_SSH=git@github.com:leigh-moveware/online-docs.git

# ---- LLM ----
LLM_PROVIDER=anthropic   # anthropic | openai | none
ANTHROPIC_API_KEY=CHANGE_ME
OPENAI_API_KEY=CHANGE_ME

# ---- Behaviour ----
MAX_WORK_SECONDS=1800
MAX_PATCH_ATTEMPTS=3
ENABLE_GITHUB_PR=true
ENABLE_JIRA_TRANSITIONS=true
ENABLE_JIRA_ASSIGNMENTS=true

# ---- Security ----
# Optional: restrict GitHub webhook (PR merged) with a secret as well
GITHUB_WEBHOOK_SECRET=CHANGE_ME
